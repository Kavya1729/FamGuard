<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- User Avatar -->
    <ImageView
        android:id="@+id/img_usr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_user"
        android:background="@drawable/user_avatar_circle"
        android:padding="12dp"
        app:tint="@color/cyan_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Contact"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/img_usr"
        app:layout_constraintStart_toStartOf="@id/img_usr"
        app:layout_constraintTop_toBottomOf="@id/img_usr" />

    <!-- Invite Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/invite_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="INVITE"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/cyan_primary"
        android:minWidth="60dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@id/img_usr"
        app:layout_constraintStart_toStartOf="@id/img_usr"
        app:layout_constraintTop_toBottomOf="@id/name" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#e5e7e9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:text="Security"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pink_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pink_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="24dp"
        android:layout_marginTop="76dp"
        app:cardBackgroundColor="#f0737b"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/heading"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/text_sos"
        android:text="SOS"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="24sp"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pink_card"
        app:layout_constraintTop_toTopOf="@id/pink_card"
        />

    <TextView
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_sos"
        app:layout_constraintStart_toStartOf="@id/pink_card"
        app:layout_constraintEnd_toStartOf="@id/sos_img"
        android:padding="16dp"
        android:id="@+id/sos_msg"
        android:elevation="8dp"
        android:text="If there's an emergency, always have the family contact me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/sos_img"
        android:src="@drawable/ic_sos"
        android:elevation="8dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@id/pink_card"
        app:layout_constraintTop_toTopOf="@id/pink_card"
        app:layout_constraintBottom_toBottomOf="@id/pink_card"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/green_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="24dp"
        android:layout_marginTop="156dp"
        app:cardBackgroundColor="#63d2c8"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/pink_card"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/text_guard"
        android:text="GUARD"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="24sp"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@id/green_card"
        />

    <TextView
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_guard"
        app:layout_constraintStart_toStartOf="@id/green_card"
        app:layout_constraintEnd_toStartOf="@id/guard_img"
        android:padding="16dp"
        android:id="@+id/guard_msg"
        android:elevation="8dp"
        android:text="Open this if your journey might be dangerous"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/guard_img"
        android:src="@drawable/ic_guard"
        android:elevation="8dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="@id/green_card"
        app:layout_constraintTop_toTopOf="@id/green_card"
        app:layout_constraintBottom_toBottomOf="@id/green_card"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:menu="@menu/bottom_bar_items"
        app:flow_horizontalAlign="center"
        android:elevation="8dp"
        android:background="@color/white"
        app:itemIconSize="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/white"
        />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="64dp"
        android:elevation="10dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_user"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toTopOf="@id/card"
        android:layout_margin="18dp"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kavya Mittal"
        android:layout_margin="18dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@id/img_user"
        app:layout_constraintTop_toTopOf="@id/card"
        />

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        app:layout_constraintStart_toStartOf="@id/user_name"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Mohalla Kot Delhi Wale Amrohaadafasaasadas jand "
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/img_location"
        app:layout_constraintEnd_toEndOf="@id/card"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/img_location" />

    <ImageView
        android:id="@+id/img_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/green"
        android:src="@drawable/ic_battery"
        app:layout_constraintStart_toStartOf="@id/img_user"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:elevation="10dp"
        android:layout_margin="16dp"
        />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="90%"
        android:textSize="16dp"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_battery"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        />

    <ImageView
        android:id="@+id/img_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_wifi"
        app:tint="@color/green"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        app:layout_constraintStart_toStartOf="@id/img_location"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:textSize="16dp"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@id/img_wifi"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        />

    <ImageView
        android:id="@+id/img_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        android:src="@drawable/ic_call"
        android:layout_margin="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>